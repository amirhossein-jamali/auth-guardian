# Example environment configuration file
# Copy this file to .env, .env.development, .env.production, or .env.test and customize as needed

# Runtime environment (development, production, test)
APP_ENV=development

# Server configuration
SERVER_PORT=8080
SERVER_HOST=localhost

# Database configuration
AUTH_GUARDIAN_DB_HOST=localhost
AUTH_GUARDIAN_DB_PORT=5432
AUTH_GUARDIAN_DB_USERNAME=
AUTH_GUARDIAN_DB_PASSWORD=
AUTH_GUARDIAN_DB_NAME=auth_guardian_dev
AUTH_GUARDIAN_DB_SSLMODE=disable

# JWT configuration
AUTH_GUARDIAN_JWT_ACCESS_SECRET=
AUTH_GUARDIAN_JWT_REFRESH_SECRET=
AUTH_GUARDIAN_JWT_ISSUER=auth-guardian
AUTH_GUARDIAN_JWT_AUDIENCE=auth-guardian-api

# Redis configuration
AUTH_GUARDIAN_REDIS_HOST=localhost
AUTH_GUARDIAN_REDIS_PORT=6379
AUTH_GUARDIAN_REDIS_PASSWORD=
AUTH_GUARDIAN_REDIS_DB=0
AUTH_GUARDIAN_REDIS_KEY_PREFIX=ag:

# Auth configuration
AUTH_GUARDIAN_ACCESS_TOKEN_SECRET=
AUTH_GUARDIAN_REFRESH_TOKEN_SECRET=
AUTH_GUARDIAN_MAX_SESSIONS_PER_USER=5

# Logging configuration
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_OUTPUT=stdout
ENABLE_AUDIT_LOGS=true

# Additional options that might be useful
# CORS_ALLOWED_ORIGINS=http://localhost:3000,https://example.com
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_DURATION_SECONDS=60
# ENABLE_SWAGGER=true
# API_VERSION=v1
# METRICS_ENABLED=true
# TRACING_ENABLED=false